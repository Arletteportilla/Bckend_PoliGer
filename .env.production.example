# ========================================
# CONFIGURACIÓN DE PRODUCCIÓN - EJEMPLO
# ========================================
# Copia este archivo como .env en producción y completa con tus datos reales

# ==========================================
# DJANGO CORE
# ==========================================
# IMPORTANTE: Genera una nueva SECRET_KEY para producción
# Usa: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=GENERA_UNA_CLAVE_SUPER_SEGURA_DE_50_CARACTERES_O_MAS_AQUI

# NUNCA uses DEBUG=True en producción
DJANGO_DEBUG=False

# Agrega todos tus dominios (separados por coma)
DJANGO_ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com,api.tu-dominio.com

# ==========================================
# BASE DE DATOS - POSTGRESQL EN LA NUBE
# ==========================================
# Opción 1: Supabase (RECOMENDADO para empezar)
DB_ENGINE=postgresql
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=tu_password_de_supabase_aqui
DB_HOST=db.tu-proyecto-id.supabase.co
DB_PORT=5432
DATABASE_SSL_REQUIRE=True

# Opción 2: Neon
# DB_ENGINE=postgresql
# DB_NAME=neondb
# DB_USER=tu-usuario-neon
# DB_PASSWORD=tu-password-neon
# DB_HOST=ep-nombre-123456.region.aws.neon.tech
# DB_PORT=5432
# DATABASE_SSL_REQUIRE=True

# Opción 3: Railway (usa DATABASE_URL automáticamente)
# DATABASE_URL=postgresql://postgres:password@host.railway.internal:5432/railway

# Opción 4: DigitalOcean
# DB_ENGINE=postgresql
# DB_NAME=poliger_production
# DB_USER=doadmin
# DB_PASSWORD=tu-password-digitalocean
# DB_HOST=db-postgresql-nyc1-12345.ondigitalocean.com
# DB_PORT=25060
# DATABASE_SSL_REQUIRE=True

# ==========================================
# CONFIGURACIÓN DE CORS
# ==========================================
# Frontend URLs permitidas (sin espacios, separadas por coma)
CORS_ALLOWED_ORIGINS=https://tu-dominio.com,https://www.tu-dominio.com,https://app.tu-dominio.com

# ==========================================
# JWT TOKENS
# ==========================================
# Tokens más largos en producción (en minutos)
JWT_ACCESS_TOKEN_LIFETIME=120
JWT_REFRESH_TOKEN_LIFETIME=2880

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/poliger/django.log

# ==========================================
# CACHE - REDIS (OPCIONAL PERO RECOMENDADO)
# ==========================================
USE_REDIS_CACHE=False
# Si usas Redis:
# USE_REDIS_CACHE=True
# REDIS_URL=redis://default:password@redis-host.com:6379/0

# Railway Redis:
# REDIS_URL=${REDIS_URL}  # Railway lo genera automáticamente

# DigitalOcean Redis:
# REDIS_URL=rediss://default:password@redis-cluster.ondigitalocean.com:25061

# ==========================================
# MODELOS ML
# ==========================================
ML_MODEL_CACHE_TIMEOUT=7200
ML_MODEL_PATH=/app/laboratorio/modelos/

# ==========================================
# ARCHIVOS ESTÁTICOS Y MEDIA
# ==========================================
STATIC_ROOT=/var/www/poliger/static/
MEDIA_ROOT=/var/www/poliger/media/

# Para Railway/Render (usan /app)
# STATIC_ROOT=/app/staticfiles/
# MEDIA_ROOT=/app/mediafiles/

# ==========================================
# EMAIL (PARA NOTIFICACIONES)
# ==========================================
# Gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
# Usa App Password, NO tu contraseña normal
# Genera en: https://myaccount.google.com/apppasswords
EMAIL_HOST_PASSWORD=tu-app-password-de-16-caracteres

# SendGrid (alternativa profesional)
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=tu-api-key-sendgrid

# ==========================================
# SENTRY (MONITOREO DE ERRORES - MUY IMPORTANTE)
# ==========================================
ENABLE_SENTRY=True
# Obtén tu DSN en: https://sentry.io
SENTRY_DSN=https://clave@o123456.ingest.sentry.io/123456

# ==========================================
# SEGURIDAD
# ==========================================
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ==========================================
# CONFIGURACIÓN DE REPORTES
# ==========================================
REPORTS_PATH=/var/www/poliger/reports/
EXCEL_TEMPLATES_PATH=/var/www/poliger/templates/

# ==========================================
# BACKUP (SI USAS VPS)
# ==========================================
BACKUP_ENABLED=True
BACKUP_DIR=/var/backups/poliger/
BACKUP_RETENTION_DAYS=30

# S3 para backups en la nube (opcional)
AWS_ACCESS_KEY_ID=tu-access-key
AWS_SECRET_ACCESS_KEY=tu-secret-key
AWS_STORAGE_BUCKET_NAME=poliger-backups
AWS_S3_REGION_NAME=us-east-1

# ==========================================
# VARIABLES DE PLATAFORMA (AUTO-GENERADAS)
# ==========================================
# Railway/Render generan estas automáticamente:
# PORT=8000
# DATABASE_URL=postgresql://...
# RAILWAY_ENVIRONMENT=production
# RENDER=true

# ==========================================
# NOTAS IMPORTANTES
# ==========================================
# 1. NUNCA commitees este archivo con datos reales
# 2. Usa variables de entorno de tu plataforma (Railway, Render, etc.)
# 3. Cambia TODAS las contraseñas y claves antes de usar
# 4. Verifica que ALLOWED_HOSTS incluya todos tus dominios
# 5. Activa SSL/HTTPS siempre en producción
# 6. Configura Sentry para monitorear errores
# 7. Configura backups automáticos de tu BD
# 8. Prueba primero en un ambiente de staging
