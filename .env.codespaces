# ========================================
# CONFIGURACIÓN PARA GITHUB CODESPACES
# ========================================
# Este archivo es para desarrollo en GitHub Codespaces
# Copia este archivo como .env cuando trabajes en Codespaces

# Configuración de Django
DJANGO_SECRET_KEY=django-codespaces-dev-key-not-for-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,*.githubpreview.dev,*.app.github.dev

# Base de Datos - SQLite para Codespaces (más fácil)
DB_ENGINE=sqlite3
DB_NAME=db_codespaces.sqlite3

# ALTERNATIVA: PostgreSQL en Codespaces (requiere instalación)
# Descomenta estas líneas si instalas PostgreSQL en Codespaces:
# DB_ENGINE=postgresql
# DB_NAME=poliger_codespaces
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_HOST=localhost
# DB_PORT=5432

# Configuración de CORS - Permitir Codespaces
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8081,http://127.0.0.1:8081

# Configuración de JWT
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# Configuración de Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/laboratorio_codespaces.log

# Configuración de Cache
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_LOCATION=codespaces-cache

# Configuración de Modelos ML
ML_MODEL_CACHE_TIMEOUT=3600
ML_MODEL_PATH=data/models/

# Configuración de Reportes
REPORTS_PATH=data/reports/
EXCEL_TEMPLATES_PATH=data/templates/

# Desactivar Sentry en Codespaces
ENABLE_SENTRY=False

# Configuración de Email (deshabilitado en dev)
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Redis (no usar en Codespaces por defecto)
USE_REDIS_CACHE=False

# Seguridad (relajada para desarrollo)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
